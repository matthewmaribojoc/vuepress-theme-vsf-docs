@import url('https://fonts.bunny.net/css?family=inter:200,300,400,500,600,700,800,900|fira-code:400');


html 
  font-family: "Inter", ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
html.dark .custom-block
  &.subheader
    color #DDDBDF

code, pre
  font-family: 'Fira Code', ui-monospace, monospace
.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
    color #1D1F22
  a
    text-decoration underline
  &.subheader
    margin -1rem 0 0rem 0
    font-size 1.2rem
    color #888
  &.tip, &.warning, &.danger
    padding 1.5rem
    border-radius 0.25rem
    margin 1rem 0
    background-color #f3f5f7

  &.tip
    border-color #42b983
  &.warning
    border-color #FFC417
    
  &.danger
    border-color #42b983
    border-color darken(red, 20%)

  &.details
    display block
    position relative
    border-radius 2px
    margin 1.6em 0
    padding 1.6em
    background-color #eee
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer

html.dark
  .custom-block
    .custom-block-title
      font-weight 600
      margin-bottom -0.4rem
      color white
    &.tip, &.warning, &.danger
      padding 1.5rem
      border-radius 0.25rem
      margin 1rem 0
      background-color #1F1E22
    &.tip
      border-color #42b983
    &.warning
      border-color #FFC417

.icon.outbound
  display none !important
  width -15px
  margin-left -15px